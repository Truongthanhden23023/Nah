local player = game.Players.LocalPlayer

local function autoHeal()
    while true do
        wait(0.1) -- Chạy mỗi 0.1 giây
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            local humanoid = character.Humanoid
            humanoid.Health = humanoid.MaxHealth -- Hồi máu liên tục
        end
    end
end

local function antiPvP()
    while true do
        wait(0.1)
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            local humanoid = character.Humanoid
            -- Tắt PvP: Ngăn người chơi khác tấn công
            humanoid:SetAttribute("CanBeAttacked", false)
        end
    end
end

-- Kích hoạt cả hai tính năng
spawn(autoHeal)
spawn(antiPvP)
