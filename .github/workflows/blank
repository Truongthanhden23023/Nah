local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Tốc độ click nhanh
local clickSpeed = 0.05  -- Thay đổi giá trị này để điều chỉnh tốc độ click (0.05 = nhanh)

-- Hàm để thực hiện Fast Click Damage
local function fastClickDamage()
    while true do
        wait(clickSpeed)  -- Thực hiện mỗi khi click với tốc độ được xác định
        if character and character:FindFirstChild("Humanoid") then
            -- Tăng sát thương cận chiến (Melee) mỗi lần click
            local melee = character:FindFirstChild("Melee")
            if melee and melee:FindFirstChild("Damage") then
                melee.Damage = 999999 -- Đặt sát thương melee cực cao cho mỗi lần click
            end

            -- Tăng sát thương cho súng
            local gun = character:FindFirstChild("Gun")
            if gun and gun:FindFirstChild("Damage") then
                gun.Damage = 999999 -- Đặt sát thương súng cực cao cho mỗi lần click
            end

            -- Tăng sát thương cho kiếm
            local sword = character:FindFirstChild("Sword")
            if sword and sword:FindFirstChild("Damage") then
                sword.Damage = 999999 -- Đặt sát thương kiếm cực cao cho mỗi lần click
            end

            -- Tăng sát thương cho trái ác quỷ (Devil Fruits)
            local devilFruit = player:FindFirstChild("DevilFruit")
            if devilFruit and devilFruit:FindFirstChild("Damage") then
                devilFruit.Damage = 999999 -- Đặt sát thương trái ác quỷ cực cao cho mỗi lần click
            end
        end
    end
end

-- Kiểm tra xem nhân vật có tồn tại và có thể tương tác không
local function checkCharacter()
    player.CharacterAdded:Connect(function()
        character = player.Character
    end)
end

-- Kích hoạt tính năng fast click damage khi nhân vật tồn tại
spawn(function()
    checkCharacter()
    spawn(fastClickDamage) -- Kích hoạt hàm fast click damage
end)
