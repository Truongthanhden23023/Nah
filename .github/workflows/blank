local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait() -- Đảm bảo rằng nhân vật đã có mặt

-- Hồi máu siêu nhanh
local function autoHeal()
    while true do
        wait(0.1) -- Hồi máu mỗi 0.1 giây
        if character and character:FindFirstChild("Humanoid") then
            local humanoid = character.Humanoid
            humanoid.Health = humanoid.MaxHealth -- Hồi máu về max health liên tục
        end
    end
end

-- Ngăn tự động bật PvP khi bị tấn công
local function antiAutoPvP()
    while true do
        wait(0.1)
        if character and character:FindFirstChild("Humanoid") then
            local humanoid = character.Humanoid
            -- Kiểm tra và vô hiệu hóa việc bị tấn công
            if humanoid:GetAttribute("Attacking") then
                humanoid:SetAttribute("Attacking", false)
            end
        end
    end
end

-- Ngừng bị tấn công bởi Bounty Hunters
local function antiBountyHunter()
    while true do
        wait(0.1)
        if character and character:FindFirstChild("Humanoid") then
            local humanoid = character.Humanoid
            -- Ngừng việc bị tấn công bởi Bounty Hunters
            humanoid:SetAttribute("CanBeAttacked", false) -- Ngừng việc bị tấn công
        end
    end
end

-- Kiểm tra xem nhân vật có tồn tại và có thể tương tác không
local function checkCharacter()
    player.CharacterAdded:Connect(function()
        character = player.Character
    end)
end

-- Kích hoạt tất cả các tính năng khi nhân vật tồn tại
spawn(function()
    checkCharacter()
    spawn(autoHeal)
    spawn(antiAutoPvP)
    spawn(antiBountyHunter)
end)
